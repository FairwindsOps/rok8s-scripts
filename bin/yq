#!/usr/bin/env bash


read -r -d '' script <<-"EOF"
		# Python code here prefixed by hard tab
		import sys, yaml, json;
		for doc in yaml.load_all(sys.stdin):
		  json.dump(doc, sys.stdout, indent=4)
		  print("")
EOF

python -c "$script" | (
    if test $# -gt 0; then
	jq "$@"
    else
	cat
    fi
)
